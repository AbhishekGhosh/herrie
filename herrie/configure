APP_NAME=herrie
APP_VERSION=1.3

# Default compilation switches
CFG_AO=oss
CFG_HTTP=yes
CFG_MP3=yes
CFG_SCROBBLER=yes
CFG_SNDFILE=yes
CFG_TRANS=nl
CFG_VORBIS=yes
[ "$CC" = "" ] && CC=cc

# Operating system defaults
OS=`uname`
case $OS in
Darwin)
	CFG_AO=ao
	CFLAGS="$CFLAGS -DBUILD_GUI_SIGWINCH_WRAPPER"
	LDFLAGS="$LDFLAGS -lresolv"
	[ "$PREFIX" = "" ] && PREFIX=/opt/local
	MANDIR=$PREFIX/share/man
	;;
FreeBSD)
	[ "$PREFIX" = "" ] && PREFIX=/usr/local
	MANDIR=$PREFIX/man
	;;
*)
	echo "Error: Unknown operating system."
	exit 1
esac

# Command line options
while [ $# -gt 0 ]
do
	case $1 in
	nomp3)
		unset CFG_MP3
		;;
	esac

	shift
done

# Standard options
SRCS="audio_file audio_output_$CFG_AO config gui_browser gui_draw \
    gui_input gui_msgbar gui_playq gui_vfslist main playq vfs \
    vfs_playlist vfs_regular"
CFLAGS="$CFLAGS `pkg-config --cflags glib-2.0 gthread-2.0` \
    -DAPP_NAME=\\\"$APP_NAME\\\" -DAPP_VERSION=\\\"$APP_VERSION\\\" \
    -DAUDIO_OUTPUT=\\\"$CFG_AO\\\""
LDFLAGS="$LDFLAGS `pkg-config --libs glib-2.0 gthread-2.0` \
    -lcurses"

# Audio output options
case $CFG_AO in
ao)
	CFLAGS="$CFLAGS -DCLOSE_STDERR"
	LDFLAGS="$LDFLAGS -lao"
	;;
oss)
	case $OS in
	OpenBSD|NetBSD)
		LDFLAGS="$LDFLAGS -lossaudio"
		;;
	esac
	;;
sdl)
	CFLAGS="$CFLAGS `sdl-config --cflags`"
	LDFLAGS="$LDFLAGS `sdl-config --libs`"
	;;
esac

OBJS=""
for i in $SRCS
do
	OBJS="$OBJS $i.o"
done
cat > Makefile << EOF
CFLAGS=$CFLAGS
LDFLAGS=$LDFLAGS
OBJS=$OBJS
all: $APP_NAME $APP_NAME.1.gz
clean:
	rm -f *.core *.o .gdb_history
distclean: clean
	rm -f $APP_NAME $APP_NAME.1.gz *.mo
install:
	install -s $APP_NAME $PREFIX/bin/$APP_NAME
	install -m 444 $APP_NAME.1.gz $MANDIR/man1/
$APP_NAME: \$(OBJS)
	$CC \$(OBJS) \$(LDFLAGS) -o $APP_NAME
%.o: src/%.c
	$CC -c \$< \$(CFLAGS) -include src/stdinc.h -o \$@
%.mo: lang/%.po
	msgfmt -o \$@ \$<
%.gz: %
	gzip -9 < \$< > \$@
EOF
cat depends.mak >> Makefile
